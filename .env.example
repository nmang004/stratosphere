# =============================================================================
# Stratosphere Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# =============================================================================
# SUPABASE
# =============================================================================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# GOOGLE AI (GEMINI)
# =============================================================================
# Get this from Google AI Studio: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-api-key-here

# =============================================================================
# GOOGLE SEARCH CONSOLE
# =============================================================================
# Set up OAuth 2.0 in Google Cloud Console
# https://console.cloud.google.com/apis/credentials
GSC_CLIENT_ID=your-gsc-client-id.apps.googleusercontent.com
GSC_CLIENT_SECRET=your-gsc-client-secret

# Mock mode for GSC (set to 'false' when real credentials are available)
# When true, realistic mock data is used instead of real GSC API
USE_MOCK_GSC=true

# =============================================================================
# INNGEST (Background Jobs)
# =============================================================================
# Get these from https://app.inngest.com
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# OPTIONAL: Development Settings
# =============================================================================
# Set to 'development' for local, 'production' for deployed
NODE_ENV=development
